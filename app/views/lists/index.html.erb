<div class="banner mb-5" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= image_path "wallpapersden.com_parasite-movie-poster_1920x1080.jpg" %>');">
  <div class="container">
  <h1>Make sure to watch the <strong>best movies</strong> !</h1>
  <p>Create list of the movies you loved or the movie you want to watch.</p>
  <a class="btn btn-flat" href="#">Create a list</a>
  </div>
</div>
<div class="container">
    <ul class="cards">
      <% @lists.each do |l| %>
      <%= link_to list_path(l) do %>
        <li><div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= image_path "leon.jpeg" %>')">
        <%=l.name%>
        </div>
        </li>
        <% end %>
      <% end %>
    </ul>
</div>
